root: true

parser: babel-eslint

extends: [standard, prettier]
plugins: [babel, prettier]

rules:
  no-console: 'error'
  no-confusing-arrow: 0
  no-case-declarations: 0
  prettier/prettier: ['error', {
    singleQuote: true,
    trailingComma: 'none',
    semi: false,
    printWidth: 80,
    tabWidth: 2,
    useTabs: false
  }]
