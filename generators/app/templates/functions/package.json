{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    <% if (includeTests) { %>"test": "npm run build && mocha -R spec ./test/unit/**",
    "test:cov": "istanbul cover ./node_modules/mocha/bin/_mocha ./test/unit/**",<% } %>
    "lint": "eslint -c .eslintrc ./src <% if (includeTests) { %>./test<% } %>",
    "clean": "rimraf dist etc",
    "serve": "firebase serve --only functions",
    "emulate": "firebase experimental:functions:shell",
    "build": "npm run clean && babel src -d --out-dir dist",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "babel-runtime": "^6.26.0",
    "firebase-admin": "~5.6.0",
    "firebase-functions": "^0.8.0"
  },
  "private": true,
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1"<% if (includeTests) { %>,
    "chai": "^4.1.2",
    "mocha": "^4.0.1",
    "proxyquire": "^1.8.0",
    "sinon": "^4.1.2",<% } %>
    "rimraf": "^2.6.1"
  }
}
