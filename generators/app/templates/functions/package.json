{
  "name": "<%= appName %>-functions",
  "description": "Cloud Functions for <%= appName %>",
  "version": "<%= version %>",
  "engines": {
    "node": "6.11.5"
  },
  "scripts": {
    <% if (includeTests) { %>"test": "npm run build && mocha ./test/unit/**",
    "test:cov": "cross-env COVERAGE=true istanbul cover $(npm bin)/_mocha ./test/unit/**",<% } else { %>
    "test": "echo \"No tests included.\"",<% } %>
    "lint": "eslint -c .eslintrc ./src",
    "build": "npm run clean && babel src -d --out-dir dist",
    "watch": "npm run build -- --watch",
    "clean": "rimraf dist etc",
    "serve": "npm run build && firebase serve --only functions",
    "shell": "npm run build && firebase experimental:functions:shell",
    "start": "npm run shell",
    "deploy": "npm run build && firebase deploy --only functions",
    "logs": "npm run build && firebase functions:log",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "firebase-admin": "^5.11.0",
    "firebase-functions": "^1.0.1",
    "glob": "7.1.2",
    "lodash": "^4.17.4"
  },
  "private": true,
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^7.2.1",
    "babel-plugin-lodash": "^3.3.2",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.0",<% if (includeTests) { %>
    "chai": "^4.1.2",<% } %>
    "cross-env": "^5.1.4",<% if (includeTests) { %>
    "firebase-functions-test": "^0.1.1",
    "istanbul": "1.1.0-alpha.1",
    "mocha": "^5.0.4",<% } %>
    "rimraf": "^2.6.2"<% if (includeTests) { %>,
    "sinon": "^4.1.2"<% } %>
  }
}
